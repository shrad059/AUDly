{
  "compilerOptions": {
    "baseUrl": ".",         // Required for path aliasing
    "paths": {
      "~/*": ["./*"],       // Alias for absolute imports
      "app/*": ["./app/*"]  // Ensure "app" resolves correctly
    }
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
